plt.figure(figsize=(8, 5))
for i in range(num_bandas):
    plt.plot(k_vals, bandas_double[:, i])
plt.title("Bandas 1D – Potencial Gaussiano Duplo")
plt.xlabel("k")
plt.ylabel("Energia")
plt.grid(True)
plt.xlim(-np.pi, np.pi)
plt.tight_layout()
plt.savefig("bandas_1D_pgd.png")
plt.show()

